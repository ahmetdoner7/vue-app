.modal-page
  transition: all .2s ease-in-out

.modal-page-header
  color: #000
  padding: 4px 24px
  width: 100%

.modal-page-overlay
  background: rgba(0, 0, 0, 0.4)
  height: 100%
  width: 100%
  position: fixed
  top: 0
  z-index: 3000

.modal-page-content
  position: absolute
  top: 50px
  background: #fff
  box-shadow: 0 11px 15px -7px rgba(0, 0, 0, 0.2), 0 24px 38px 3px rgba(0, 0, 0, 0.14), 0 9px 46px 8px rgba(0, 0, 0, 0.12)
  overflow-y: auto
  margin-bottom: 100px
  min-width: 280px
  max-width: 80vw
  z-index: 3001
  -webkit-backface-visibility: hidden

.modal-page-enter, .modal-page-leave-active
  opacity: 0

@media (max-width: 767px)
  .modal-page-content
    max-width: 100vw

