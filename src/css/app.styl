// app global css
@import '~medium-editor/dist/css/medium-editor.min.css'
@import '~medium-editor/dist/css/themes/default.min.css'
@import 'app/modal'

body {
  background: #f7f7f7;
}

a {
  color: #36cb77;
  &:hover {
    color: #2fab65;
  }
}

h1 {
  font-size 2rem;
  letter-spacing 0em;
}

h2 {
  font-size 1.5rem;
}

h3 {
  font-size 1.2rem;
}

hr {
  border: none;
  border-bottom: solid 1px #ddd
}

.content-container {
  padding-top: 50px;
}

@media (max-width: 991px) {
  .content-container {
    padding: 10px 15px;
  }
}